{
  "name": "dd-framework",
  "version": "0.1.0",
  "description": "A framework for Pixel Game Maker MV.",
  "author": "kidthales <kidthales@agogpixel.com>",
  "license": "MIT",
  "private": true,
  "homepage": "https://github.com/kidthales/dd-framework",
  "repository": {
    "type": "git",
    "url": "https://github.com/kidthales/dd-framework"
  },
  "bugs": {
    "url": "https://github.com/kidthales/dd-framework/issues"
  },
  "scripts": {
    "prepare": "husky install",
    "build": "npm run build:plugins && npm run build:docs",
    "prebuild:plugins": "shx rm -rf dist/plugins",
    "build:plugins": "cross-env NODE_ENV=development webpack --progress --color && cross-env NODE_ENV=production webpack --progress --color",
    "build:docs": "npm run build:docs:api",
    "prebuild:docs:api": "shx rm -rf dist/docs/api",
    "build:docs:api": "typedoc",
    "lint": "eslint . && prettier --check .",
    "lint:fix": "eslint --cache --fix . && prettier --write .",
    "clean": "npm run clean:dist && npm run clean:lint",
    "clean:dist": "shx rm -rf dist",
    "clean:lint": "shx rm -f .eslintcache"
  },
  "devDependencies": {
    "@babel/core": "~7.22.10",
    "@babel/preset-env": "~7.22.10",
    "babel-loader": "~9.1.3",
    "cross-env": "~7.0.3",
    "eslint": "~8.47.0",
    "eslint-config-prettier": "~9.0.0",
    "eslint-plugin-es5": "~1.5.0",
    "eslint-plugin-prettier": "~5.0.0",
    "husky": "~8.0.3",
    "lint-staged": "~14.0.0",
    "prettier": "~3.0.2",
    "shx": "~0.3.4",
    "type-fest": "~4.2.0",
    "typedoc": "~0.25.1",
    "webpack": "~5.88.2",
    "webpack-cli": "~5.1.4"
  },
  "lint-staged": {
    "*.(js|ts)": "eslint --cache --fix",
    "*.(html|css|less|scss|sass|styl|md|json)": "prettier --write"
  }
}
